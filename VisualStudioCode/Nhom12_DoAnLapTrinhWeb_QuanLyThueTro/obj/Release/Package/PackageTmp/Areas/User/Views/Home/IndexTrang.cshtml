@model IEnumerable<Nhom12_DoAnLapTrinhWeb_QuanLyThueTro.Models.P_TrangResult>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageForUser.cshtml";
}

<div class="content-trangchu">
    <div class="baiviet">
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <ul class="ul_Content_Index">
                <li>
                    <img src="~/Content/img/@item.img" />
                    <h2>@Html.DisplayFor(modelItem => item.TieuDe)</h2>
                    <p>@Html.DisplayFor(modelItem => item.DienTichPhong) @Html.DisplayFor(modelItem => item.DonGia)</p>
                    <p>@Html.DisplayFor(modelItem => item.DiaChiTro)</p>
                    <p class="p_index">@Html.DisplayFor(modelItem => item.MoTa)</p>
                    <p>@Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.ID })</p>
                </li>
            </ul>
            @*   @Html.ActionLink("Edit", "Edit", new { id = item.id })*@

            @*@Html.ActionLink("Delete", "Delete", new { id = item.id })*@
            i += 1;

            if (i == 10)
            {
                break;
            }
        }
        @{ int loai = int.Parse(Request.QueryString["loai"]);}
        <form action="/Home/IndexTrang/">
            <input type="text" name="id" placeholder="Nhập số trang ">
            <input type="hidden" name="loai" value="@loai">
            <input type="submit" value="Go">
        </form>
    </div>

</div>