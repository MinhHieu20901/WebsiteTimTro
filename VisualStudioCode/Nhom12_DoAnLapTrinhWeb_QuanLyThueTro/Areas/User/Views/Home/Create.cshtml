@model Nhom12_DoAnLapTrinhWeb_QuanLyThueTro.Models.Phong

@{
    Layout = null;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutFor_Details_Edit_Create.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/img/StyleSheet2.css" rel="stylesheet" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Home", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" })) 
