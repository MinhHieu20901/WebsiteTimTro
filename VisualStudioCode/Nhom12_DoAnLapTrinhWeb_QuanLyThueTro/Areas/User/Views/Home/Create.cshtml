                    <input title="Upload a product image" type="file" name="img" />
                    @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.DiaChiTro, htmlAttributes: new { @class = "control-label col-md-2" })
